<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="job"
                type="com.esp.localjobs.data.models.Job"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/job_item_height"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="2dp"
            android:clipChildren="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="10dp"
                    app:salary="@{job.salary}"
                    android:id="@+id/colorIndicator"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

            </View>

            <TextView
                    android:text="@{job.title}"
                    android:layout_width="0dp"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    tools:text="this is a title test"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:transitionName="title"
                    android:layout_marginBottom="0dp"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:text="@{job.description}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    tools:text="this is a description test"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:transitionName="description"
                    app:layout_constraintStart_toStartOf="@+id/title"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:transitionName="image"
                    app:layout_collapseMode="parallax"
                    tools:srcCompat="@tools:sample/avatars[1]"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/colorIndicator"
                    app:layout_constraintDimensionRatio="w,1:1"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/price"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintStart_toStartOf="@id/description"
                    app:layout_constraintEnd_toEndOf="@id/description"
                    app:salary="@{job.salary}"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>